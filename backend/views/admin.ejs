<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Panel - Family Submissions</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      background-color: #f4f4f4;
    }
    h1 {
      text-align: center;
    }
    .top-buttons {
      display: flex;
      justify-content: flex-end;
      gap: 10px;
      margin-bottom: 20px;
    }
    .top-buttons button {
      padding: 8px 16px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    .top-buttons button:hover {
      background-color: #0056b3;
    }
    .family-card {
      background: white;
      border-radius: 8px;
      padding: 20px;
      margin-bottom: 20px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    .family-card img {
      max-width: 150px;
      height: auto;
      border-radius: 6px;
      margin: 10px 0;
    }
    .members p {
      margin: 3px 0;
    }
    .buttons {
      margin-top: 10px;
    }
    .buttons button {
      margin-right: 10px;
      padding: 6px 12px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    .approve { background-color: #28a745; color: white; }
    .reject { background-color: #dc3545; color: white; }
    .view { background-color: #17a2b8; color: white; }
  </style>
</head>
<body>

  <h1>Admin - Family Submissions</h1>

  <div class="top-buttons">
    <button onclick="window.open('/admin/export-families', '_blank')">üìÑ Open PDF</button>
    <button onclick="window.location.href='/admin/export-families'">üì• Download PDF</button>
  </div>

  <div id="families"></div>

  <script>
    async function fetchFamilies() {
      const res = await fetch('/admin/families');
      const data = await res.json();
      const container = document.getElementById('families');
      container.innerHTML = '';

      data.forEach(family => {
        const div = document.createElement('div');
        div.className = 'family-card';
        
        let membersHTML = '';
        if (family.members && family.members.length > 0) {
          membersHTML = '<div class="members"><strong>Members:</strong>';
          family.members.forEach((m, i) => {
            membersHTML += `<p>#${i+1}: ${m.name} | Age: ${m.age} | Gender: ${m.gender} | Relation: ${m.relation}</p>`;
          });
          membersHTML += '</div>';
        }

        div.innerHTML = `
          <p><strong>Family Head:</strong> ${family.familyHead}</p>
          <p><strong>Email:</strong> ${family.email}</p>
          <p><strong>Status:</strong> ${family.status || 'Pending'}</p>
          ${family.image ? `<img src="/uploads/${family.image}" alt="Profile Image">` : ''}
          ${membersHTML}
          <div class="buttons">
            <button class="approve" onclick="updateStatus('${family._id}', 'approved')">‚úÖ Approve</button>
            <button class="reject" onclick="updateStatus('${family._id}', 'rejected')">‚ùå Reject</button>
            <button class="view" onclick="viewPDF('${family._id}')">üëÅÔ∏è View PDF</button>
          </div>
        `;
        container.appendChild(div);
      });
    }

    async function updateStatus(id, status) {
      const res = await fetch(`/admin/families/${id}/${status}`, { method: 'POST' });
      const msg = await res.text();
      alert(msg);
      fetchFamilies();
    }

    function viewPDF(id) {
      window.open(`/admin/family/${id}/pdf`, '_blank');
    }

    fetchFamilies();
  </script>

</body>
</html>
