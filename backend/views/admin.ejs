<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Panel - Family Submissions</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      background-color: #f4f4f4;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    .top-buttons {
      display: flex;
      justify-content: flex-end;
      margin-bottom: 20px;
      gap: 10px;
    }

    .top-buttons button {
      padding: 8px 16px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .top-buttons button:hover {
      background-color: #0056b3;
    }

    .family-card {
      background-color: #fff;
      padding: 20px;
      margin-bottom: 20px;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    .family-card img {
      max-width: 120px;
      height: auto;
      border-radius: 6px;
      margin-bottom: 10px;
    }

    .family-card p {
      margin: 5px 0;
    }

    .buttons {
      margin-top: 10px;
    }

    .buttons button {
      margin-right: 10px;
      padding: 6px 12px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .approve {
      background-color: #28a745;
      color: white;
    }

    .reject {
      background-color: #dc3545;
      color: white;
    }

    .view {
      background-color: #17a2b8;
      color: white;
    }

    .approve:hover {
      background-color: #218838;
    }

    .reject:hover {
      background-color: #c82333;
    }

    .view:hover {
      background-color: #138496;
    }

    .members {
      margin-top: 10px;
      padding-left: 15px;
    }

    .members p {
      margin: 3px 0;
    }
  </style>
</head>
<body>

  <h1>Admin - Family Submissions</h1>

  <div class="top-buttons">
    <button onclick="window.open('/admin/export-families', '_blank')">üìÑ Open All in New Tab</button>
    <button onclick="window.location.href='/admin/export-families'">üì• Download All as PDF</button>
  </div>

  <div id="families"></div>

  <script>
    async function fetchFamilies() {
      try {
        const res = await fetch('/admin/families');
        const data = await res.json();
        const container = document.getElementById('families');
        container.innerHTML = '';

        if (!Array.isArray(data) || data.length === 0) {
          container.innerHTML = '<p>No submissions found.</p>';
          return;
        }

        data.forEach(family => {
          const div = document.createElement('div');
          div.className = 'family-card';

          let membersHTML = '';
          if (Array.isArray(family.members) && family.members.length > 0) {
            membersHTML = '<div class="members"><strong>Family Members:</strong>';
            family.members.forEach((member, index) => {
              membersHTML += `
                <p>#${index + 1} - Name: ${member.name}, Age: ${member.age}, Gender: ${member.gender}, Relation: ${member.relation}</p>
              `;
            });
            membersHTML += '</div>';
          }

          div.innerHTML = `
            <p><strong>Name:</strong> ${family.familyHead}</p>
            <p><strong>Email:</strong> ${family.email}</p>
            <p><strong>Status:</strong> ${family.status || 'Pending'}</p>
            ${family.image ? `<img src="/uploads/${family.image}" alt="Profile Image" />` : ''}
            ${membersHTML}
            <div class="buttons">
              <button class="approve" onclick="updateStatus('${family._id}', 'approved')">‚úÖ Approve</button>
              <button class="reject" onclick="updateStatus('${family._id}', 'rejected')">‚ùå Reject</button>
              <button class="view" onclick="viewFamily('${family._id}')">üëÅÔ∏è View</button>
            </div>
          `;
          container.appendChild(div);
        });
      } catch (error) {
        console.error('Error loading families:', error);
        document.getElementById('families').innerHTML = '<p>Error loading data.</p>';
      }
    }

    async function updateStatus(id, status) {
      try {
        const res = await fetch(`/admin/families/${id}/${status}`, { method: 'POST' });
        const result = await res.text();
        alert(result);
        fetchFamilies();
      } catch (err) {
        console.error('Error updating status:', err);
        alert('Failed to update.');
      }
    }

    function viewFamily(id) {
      window.open(`/admin/family/${id}/pdf`, '_blank');
    }

    fetchFamilies();
  </script>
</body>
</html>
